.how
	padding 90px 0 0 0
	background-color blueBGC
	color whiteC
	text-align center
	overflow hidden
	
	&__title
		text-transform uppercase
		font-size rem(30)
		font-weight 600
		margin 0 0 70px 0
	
	&__steps
		display flex
		justify-content space-between
		position relative
		margin 0 0 40px 0
		
		&:after
			content ''
			display block
			position absolute
			width 82%
			left 50%
			transform translateX(-52%)
			height 4px
			background-color whiteC
			top 23px
			z-index 1
		
		li
			display flex
			align-items center
			justify-content space-around
			
			.how__text
				order 1
				margin 0 5px
			
			img
				order 2
				width 40%
		
		li:nth-child(2n)
			
			.how__text
				order 2
			
			img
				order 1
		
		span
			font-size rem(26)
			font-weight 600
			display inline-block
			width 50px
			height 50px
			border 2px solid whiteC
			border-radius 50%
			line-height 50px
			background-color blueBGC
			position relative
			z-index 2
			margin 0 0 15px 0
		
		p
			font-size rem(18)
			font-weight 600
			max-width 220px
			padding 0 3px

	&__img
		width 100%
		max-width 950px