.main
	background-color mainBGC
	background-image url(../img/banner2.png)
	background-repeat no-repeat
	background-size 290px
	background-position center
	padding 170px 0 90px 0
	position relative
	
	&__wrap
		display flex
		justify-content space-between
	
	&-btn
		position fixed
		display block
		right 5%
		bottom 60px
		z-index 1
		
		a
			position absolute
			bottom -40px
			left 50%
			transform translateX(-50%)
			display block
			padding 10px 25px
			white-space nowrap
			background-color whiteC
			border-radius 5px
			color blueC
			font-size rem(16)
			font-weight 900
			box-shadow 0px 5px 9.6px 0.4px rgba(0, 0, 0, 0.5)
	
	&__title
		color blueC
		font-size rem(50)
		max-width 400px
		line-height 1.2
		margin 0 0 25px 0
		
		span
			color greenC
	
	&__descr
		max-width 395px
		font-size rem(16)
		color grayC
		margin 0 0 55px 0
	
	&__subtitle
		color blueC
		font-size rem(20)
		margin 0 0 25px 0
	
	&__btn
		margin 0 0 60px 0
	
	&__usp
		font-size rem(32)
		max-width 290px
		margin 0 0 30px 0
		font-weight 900
		
		span
			color blueC
	
	&__app
		
		a
			display inline-block
			margin 5px 10px 5px 0