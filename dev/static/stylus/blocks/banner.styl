.banner
	position fixed
	bottom 170px
	right 5%
	z-index 2
	display flex
	border-radius 5px
	overflow hidden
	box-shadow 0px 5px 9.6px 0.4px rgba(0, 0, 0, 0.5)
	visibility hidden
	
	
	.close
		position absolute
		display block
		right 0
		top 0
		padding 5px 10px
		cursor pointer
	
	&__left
		background-color blueBGC
		background-repeat no-repeat
		background-position 15px bottom
		font-size rem(20)
		color whiteC
		font-weight 900
		padding 30px 15px
		
		span
			color yelloC
	
	&__right
		background-color whiteC
		display flex
		flex-direction column
		justify-content center
		padding 15px 25px
		
		img
			width 90px
			height auto
			margin 15px 0