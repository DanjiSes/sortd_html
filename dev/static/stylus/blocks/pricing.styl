.pricing
	padding 60px 0
	text-align center
	
	&__title
		font-size 30px
		margin 0 0 50px 0
	
	&__list
		display flex
		justify-content space-around
		flex-wrap wrap
		
		li
			position relative
			padding 75px 0 0 0
			max-width 200px
			margin 15px
			
			img
				position absolute
				top 0
				left 50%
				transform translateX(-50%)
			
			h3
				margin 0 0 10px 0
				color blueC