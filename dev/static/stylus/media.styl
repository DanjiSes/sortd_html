@media all and (min-width: 870px)
	
	.main__right
		text-align right

@media all and (min-width: 992px)
	
	.main__right
		text-align left
		
@media all and (max-width: 870px)
	
	.main
		background-image url(../img/banner2-sm.png)
		background-size 40%
		background-position center bottom
		text-align center
		padding 130px 0 150px 0
		
		&__wrap
			flex-direction column
		
		&__title
			margin 0 auto 25px auto
			font-size rem(35)
			max-width 300px
		
		&__descr
			margin 0 auto 45px auto
		
		&__usp
			margin 0 auto 30px auto
			font-size rem(25)

@media all and (max-width: 769px)
	
	.action
		background-image url(../img/action-sm.jpg)
		padding 200px 15px 100px 15px
		text-align center
		
		&__title
			width 100%
	
	.aboutus
		padding 40px 0
		
		img
			width 100px
			height auto
			margin 0 0 40px 0
	
	.hide-sm
		display none

@media all and (min-width: 570px)
	
	.banner
		
		&__left
			background-image url(../img/hand.png)
			padding 80px 20px 80px 180px
			font-size rem(24)
	
	.how__steps
		
		li
			display block
			
			img
				display none

@media all and (max-width: 570px)
	
	.how
		
		&__steps
			flex-direction column
			align-items center
			
			&:after
				display none
			
			li
				margin 0 0 30px 0
		
		&__img
			display none
	
	.footer
		
		&__wrap
			
			nav
				display none
		
		&__love
			text-align center
			
			.heart
				text-align center
		
		&__cop
			margin 25px 0